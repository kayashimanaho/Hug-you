<div class ="container">
  <h5><%= @user.name %>さんの詳細</h5>
  
   <table border="0" cellpadding="7" cellspacing="0" width="30%">
      <tr><th>会員ID</th><td><%= @user.id %></td></tr>
      <tr><th>氏名</th><td><%= @user.name %></td></tr>
      <tr><th>ニックネーム</th><td><%= @user.nick_name %></td></tr>
      <tr><th>郵便番号</th><td><%= @user.postal_code %></td></tr>
      <tr><th>住所</th><td><%= @user.address %></td></tr>
      <tr><th>出身地</th><td><%= @user.from %></td></tr>
      <tr><th>年齢</th><td><%= @user.age %>歳</td></tr>
      <tr><th>自己紹介文</th><td><%= @user.introduction %></td></tr>
      <tr><th>メールアドレス</th><td><%= @user.email %></td></tr>
      <tr><th>会員ステータス</th><td><% if @user.is_deleted %>
          <strang><span style="color:grey;">退会</span></strong>
        <% else %>
          <span style="color:limegreen;">有効</span>
        <% end %></td></tr>
    </table>
  
  <%= link_to "編集する",  edit_admin_user_path, class:' btn btn-info' %>
</div>