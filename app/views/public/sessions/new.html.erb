<div class="container text-center">
<h4>ログイン</h4>

<%= form_with model: @user, url: user_session_path do |f| %>

  <%= render "public/shared/error_messages", resource: resource %>
  
  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"sample@example.com",size: 40  %>
  </div>

  <div class="field">
    <%= f.label :パスワード %><br />
    <%= f.password_field :password, autocomplete: "current-password", placeholder:"0000000",size: 40  %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      
    </div>
  <% end %>

  <div class="mt-2">
    <%= f.submit "ログイン",class: "btn btn-outline-success",size: 50  %>
  </div>
<% end %>
<h6>会員登録がお済みでない方</h6>
<a><%= link_to "こちら",new_user_registration_path %>から新規登録してね</a>

</div>
