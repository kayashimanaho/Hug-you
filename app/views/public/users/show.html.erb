  <div class ="container mt-3">
    <h5><%= @user.nick_name %></h5>
   
      <div class="card" style="width: 18rem;">
  <%= image_tag @user.get_profile_image(50,50) %><br>
    <!--自分の編集画面-->
    <% if @user == current_user %>
    <%= link_to information_edit_users_path(@user.id),class: 'btn btn-outline-secondary' do %>
      <span><i class="fas fa-user-cog"></i></span>
    <% end %><br>
    <% end %>
  <div class="card-body">
    <h5 class="card-title">自己紹介 <% if @user == current_user %>
    <%= link_to information_edit_users_path(@user.id),class: 'btn btn-outline-secondary' do %>
      <span><i class="fas fa-user-cog"></i></span>
    <% end %><br>
    <% end %>
    <!--すでに部屋が存在しているかどうか分岐、
    していなければformでコントローラーにパラメーターに送る-->
   <% unless @user.id == current_user.id %>
     <% if @is_room == true %>
      <%= link_to 'メッセージへ', room_path(@room_id) %>
     <% else %>
       <%= form_for @room do |f| %>
         <%= fields_for @entry do |e| %>
           <% e.hidden_field :user_id, value: @user.id %> 
          <% end %>
         <%= f.submit "メッセージを送る", class: "btn btn-info" %>
        <% end %>
      <% end %>
    <% end %>
    </h5>
    <p class="card-text"><%= @user.introduction %></p>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">ニックネーム : <%= @user.nick_name %></li>
    <li class="list-group-item">居住地 : <%= @user.from %></li>
    <li class="list-group-item">年齢 : <%= @user.age %>歳</li>
  </ul>
</div></div>