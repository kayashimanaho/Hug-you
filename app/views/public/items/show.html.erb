<div class ="container mt-3">
  <div class="h4 pb-2 mb-4 border-bottom border-danger">
    商品の詳細
  </div>
  <%#= form_with model: @cart_item,url: cart_items_path,method: :post do |f| %>
    <div class ="row">
      <div class ="col-7">
        <!--写真を複数枚選択　shift＋クリック-->
        <% @item.images.each do |image|%>
          <%= image_tag image, size: "200x200" %>
        <% end %>
        <% if @item.images.length == 0 %>
          <%= image_tag 'noimage.png', size: "200x200" %>
        <% end %>
       
        </div>
    </div>
    <div class="row">
      <div class ="col-8">
        <table border="0" cellpadding="11" cellspacing="0" width="60%">
          <tr><th>出品者</th><td><%= @item.user.nick_name %></td></tr>
          <tr><th>商品名</th><td><%= @item.name %></td></tr>
          <tr><th>商品説明</th><td><%= @item.introduction %></td></tr>
          <tr><th>税込価格(税抜価格)</th><td> <%= (@item.add_tax_price.to_s(:delimited)) %>
            (<%= (@item.price.to_s(:delimited)) %>円)</td></tr>
          <tr><th>販売ステータス</th><td>
            <% if @item.is_active %>
              <strang><span style="color:limegreen;">販売中</span></strong>
             <% else %>
              <span style="color:gray;">販売停止中</span>
            <% end %>
          </td></tr>
        </table>
      </div>
      </div>
</div>
   <div class="d-flex align-items-center justify-content-center">
     <% if @user == current_user %>
        <%= link_to "編集する", edit_item_path(@user.id),class: 'btn btn-outline-secondary' %>
     <% else %>
       <%= link_to "購入の手続きへ", new_order_path(@item.id), class: "btn btn-outline-info" %>
     <% end %>
    </div>
</div>
