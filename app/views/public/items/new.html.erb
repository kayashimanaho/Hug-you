<div class ="container mt-3">
  <div class="h4 pb-2 mb-4 border-bottom border-danger">
    新規出品
  </div>
  <%= form_with url: items_path,model: @item do |f| %>
    <table border="0" cellpadding="11" cellspacing="0" width="60%">
      <tr><th>商品画像</th><td><%= f.file_field :images, multiple: true, accept: "image/jpeg,image/gif,image/png", data: { images_target: "select", action: "change->images#selectImages" } %></td></tr>
      <tr><th>商品名</th><td><%= f.text_field :name %></td></tr>
      <tr><th>商品説明</th><td><%= f.text_area :introduction %></td></tr>
      <tr><th><%#= f.label :status_id, '商品の状態' %></th><td><%#= f.select :status_id, {'新品未使用':1,'ほぼ新品':2,'傷や汚れあり':3,'状態は悪い':4}, { include_blank: '選択してください'}, { class: 'form-control' , required: true } %></td></tr>
      <tr><th>販売価格(税抜)</th><td><%= f.number_field :price %>円</td></tr>
      <tr><th><%= f.submit '出品する', class: "btn btn-outline-danger" %></td></tr>
    </table>
  <% end %>
</div>
