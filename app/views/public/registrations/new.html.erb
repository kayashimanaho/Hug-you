<div class="container">
<h5>新規会員登録</h5>

<%= form_with model: @user, url: user_registration_path do |f| %>

  <%= render "public/shared/error_messages", resource: resource %>
  
  <table border="0" cellpadding="11" cellspacing="0" width="60%", style="font-size : 13px;">
    <tr><th>氏名</th><td><%= f.text_field :name, placeholder:"令和 道子" %></td></tr>
    <tr><th>メールアドレス</th><td><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"sample@test" %></td></tr>
    <tr><th>郵便番号（ハイフンなし）</th><td><%= f.text_field :postal_code, placeholder:"0000000" %></td></tr>
    <tr><th>住所</th><td><%= f.text_field :address, placeholder:"東京都渋谷区代々木神園町０−０",size: 50 %></td></tr>
    <tr><th>パスワード（６文字以上）</th><td>
      <% if @minimum_password_length %>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %></td></tr>
    <tr><th>パスワード（確認用）</th><td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td></tr>
    <tr><th></th><td><%= f.submit "新規登録" %></td></tr>
    <tr><th>登録がお済みの方</th><td><%= link_to "ログイン",new_user_session_path %></td></tr>
    <% end %>
  </table>

</div>
