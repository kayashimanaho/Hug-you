<div class ="container mt-3">
  <h5>投稿の編集</h5>
  <%= form_with model: @post, url: post_path,method: :patch do |f| %>
    <table border="0" cellpadding="7" cellspacing="0" width="60%">
      <tr><th>投稿内容</th><td><%= f.text_area :content, autofocus: true, id:"inputPostsContent" %></td></tr>
      <tr><th></th><td><%= f.submit "変更を保存", class: "btn btn-success" %></td></tr>
    </table>
  <% end %>

</div>