<%= flash[:notice] %>
<div class ="container">
  <h5>投稿の詳細</h5>
  <div class ="row">
    <div class="col-sm-5">
      <div class="card">
          <div class="card-body">
            <h5 class="card-title">
              <%= link_to user_path(@post.user.id),class: "btn btn-info" do %>
              <span>
                <% if @post.user.profile_image.attached? %>
                  <%= image_tag @post.user.profile_image, size: "50x50" %>
                <% else %>
                  <%= image_tag "no_image.jpeg", size: "50x50" %>
                <% end %>
                <%= @post.user.nick_name %>
              </span>
              <% end %>
              <!--自分の投稿しか削除できない-->
              <% if @post.user == current_user %>
                <%= link_to "削除", post_path(@post.id), method: :delete %>
              <% end %>
              <!--自分のコメントしか編集できない記述-->
              <% if @post.user == current_user %>
                <h6><%= link_to "編集する", edit_post_path(@post.id) %></h6>
              <% end %>
            </h5>
              <div class="card-text"><%= simple_format(@post.content) %></div>
                <% if @post.favorited_by?(current_user) %>
              <p>
                  <%= link_to post_favorites_path(@post), method: :delete do %>
                  ♥<%= @post.favorites.count %> いいね
                  <% end %>
              </p>
                <% else %>
              <p>
                  <%= link_to post_favorites_path(@post), method: :post do %>
                  ♡<%= @post.favorites.count %> いいね
                  <% end %>
              </p>
                <% end %>
          </div>
            <p>コメント件数：<%= @comments.count %></p>
            
        </div>
      </div>
        <div class ="mt-2">
          <%= form_with model: [@post, @comment] do |f| %>
            <%= f.text_area :comment, rows: '5', placeholder: "コメントを書く",size: "50%" %>
            <%= f.submit "送信する" %>
          <% end %>
    <div class ="ml-5 mt-2">
      <% @comments.each do |comment| %>
        <p><%= image_tag comment.user.get_profile_image(100,100) %></p>
          <%= comment.user.name %>
          <small class="text-black-50">
            <%= comment.user.created_at.strftime('%Y/%m/%d %H:%M') %>
          </small>
          <%= simple_format(comment.comment) %>
          <!--自分のコメントしか削除できない-->
          <% if comment.user == current_user %>
            <%= link_to "削除", post_comment_path(@post.id, comment.id), method: :delete %>
          <% end %>
          <!--自分のコメントしか編集できない記述-->
          <% if comment.user == current_user %>
          <%= link_to "編集する", edit_post_comment_path(comment.id) %>
          <% end %>
      <% end %>
    </div>
        </div>
    </div>
</duv>